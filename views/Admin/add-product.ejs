<%- include('../template/header.ejs') %>
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="/css/forms.css">

<%- include('../template/nav.ejs') %>
<main>
    <form class="product-form" action="/add-product" method="POST">
        <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" id="title">
        </div>
        <div class="form-control">
            <label for="imgUrl">URL Image</label>
            <input type="text" name="imgUrl" id="imgUrl">
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input type="number" name="price" id="number" step="0.01">
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <textarea rows="5" type="text" name="description" id="description"></textarea>
        </div>

        <button class="btn" type="submit">Add Product</button>
    </form>
</main>
<%- include('../template/footer.ejs') %>